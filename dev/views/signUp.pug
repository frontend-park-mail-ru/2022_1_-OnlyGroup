-  let source = '/static/images/';
-  let imgSrc = [source + 'vk.svg', source + 'google.svg', source + 'facebook.svg'];

mixin createSocialImages(imgSrc)
    each iSrc in imgSrc
        a(href="#")
            img(src= iSrc)

mixin createInput(iType, iClass)
    input(class= iClass, type= iType)

mixin createP(text, pClass)
    p(class= pClass)= text

.main__content
    .overlay
    .content__authorize
        .signup
            .authorize__logo
                img.logo__img.signup__logo__img(src=`${source}logo.png`)
                h1.logo__text.signup__logo__text OnlySocial
            .authorize__form
                form(id="form")
                    +createP('Email', 'form__text__email form__signup')
                    +createInput('text', 'form__login form__input__require form__signup')
                    .form__error.signup__error
                        +createP('Error: wrong email', 'form__login__error form__input__error')
                    +createP('Password', 'form__text__password form__signup')
                    +createInput('password', 'form__password form__input__require form__signup')
                    .form__error.signup__error
                        +createP('Error: wrong password', 'form__password__error form__input__error')
                    +createP('Repeat password', 'form__text__password form__signup')
                    +createInput('password', 'form__password form__repeat__passwords form__input__require form__signup')
                    button.form__button.form__signup__btn(type="submit") Sign up
            .form__sign-in
                +createP('Already have account?', '')
                a(href="/login") Sign in


