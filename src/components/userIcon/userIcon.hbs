<div class="user-icon">

    <img src="./static/images/avatar.png", class='user-icon__avatar'>

    <div class="user-icon__info-box">
        <div class="user-icon__info-box__personal">
            <div class="user-icon__info-text">{{name}}, {{age}}</div>
            <div class="user-icon__info-box__personal-location">
                <img src="./static/images/location.png" class="user-icon__info-location-png" alt="location">
                <div class="user-icon__info-text">{{location}}</div>
            </div>
        </div>
        <div class="user-icon__info-box__settings">
            <img src="./static/images/settings.png" class="user-icon__info-settings-png" alt="settings">
            <button id='edit-button', class="user-icon_edit-button">Edit Profile</button>
        </div>
    </div>
</div>
