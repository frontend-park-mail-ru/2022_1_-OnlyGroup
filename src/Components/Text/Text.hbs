{{#if href}}
    <a href="{{{href}}}"
       class="link {{#if primaryType}}text_primary {{/if}}{{#if errorType}}text_error{{/if}}"
       id="{{{id}}}">{{textContent}}</a>
{{else}}
    <p id="{{{id}}}"
       class="{{#if prefix}}{{{prefix}}}text{{/if}} text {{#if primaryType}}text_primary {{/if}}
           {{#if secondaryType}}text_secondary {{/if}}{{#if errorType}}text_error {{/if}}">{{textContent}}</p>
{{/if}}

