<div class="input-container flex justify-content-center flex-column gap-4 w-full">
    {{#if label}}
        <span class="text-align-center input-container__label">{{label}}</span>
    {{/if}}
    <input type={{{inputType}}} id={{{inputId}}} class="input-component {{#if error}}input-component_error{{/if}} {{{styles}}}" value="{{value}}">
    {{#if error}}
        <span class="text-align-center input-container-text__error">{{error}}</span>
    {{/if}}
</div>
