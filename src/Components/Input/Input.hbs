<div class="input-container {{#if vertical}}input-container_vertical {{/if}}{{#if
        horizontal}}input-container_horizontal {{/if}}" id="{{{id}}}">
    {{#if label}}
        <span class="input-container__label">{{label}}</span>
    {{/if}}
    <div class="input-container__field input-field">
        <input type="{{{inputType}}}" id="{{{inputId}}}"
            {{#if placeholder}}
               placeholder="{{placeholder}}"
            {{/if}}
               class="input-field__input {{#if primaryType}}input-field__input_primary {{/if}}{{#if
                       error}}input-field__input_error {{/if}}" value="{{value}}">
        {{#if icon}}
            <button class="input-field__button" id="{{buttonId}}"><img src="{{icon}}" alt="icon"></button>
        {{/if}}
    </div>
    {{#if error}}
        <span class="input-container__error">{{error}}</span>
    {{/if}}
</div>
